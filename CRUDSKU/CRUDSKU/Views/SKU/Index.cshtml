@model List<SKU>

@{
    ViewData["Title"] = "SKUs";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="text-float-left">
    <a asp-controller="SKU" asp-action="Create" class="btn btn-outline-success blink-animation">
        Crear Nuevo Producto<i class="bi bi-plus-square blink-animation"></i>
    </a>
</div>

<div class="clearfix"></div>

<table class="table">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>
                    <a asp-controller="SKU" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
                <td>
                    <a asp-controller="SKU" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>